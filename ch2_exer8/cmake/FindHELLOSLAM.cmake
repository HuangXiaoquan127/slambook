FIND_PATH(HELLOSLAM_INCLUDE_DIR libHelloSLAM.h /usr/include/hello /usr/loacl/include/hello)
FIND_LIBRARY(HELLOSLAM_LIBRARY NAMES HelloSLAM PATH /usr/lib /usr/local/lib)
IF(HELLOSLAM_INCLUDE_DIR AND HELLOSLAM_LIBRARY)
    SET(HELLOSLAM_FOUND TRUE)
ENDIF(HELLOSLAM_INCLUDE_DIR AND HELLOSLAM_LIBRARY)
IF(HELLOSLAM_FOUND)
    IF(NOT HELLOSLAM_FIND_QUIETLY)
        MESSAGE(STATUS "Found HelloSLAM: ${HELLO_LIBRARY}")
    ENDIF(NOT HELLOSLAM_FIND_QUIETLY)
ELSE(HELLOSLAM_FOUND)
    IF(HELLOSLAM_FIND_REQUIRED)
        MESSAGE(FATAL_ERROR "Could not find HelloSLAM library")
    ENDIF(HELLO_FIND_REQUIRED)
ENDIF(HELLOSLAM_FOUND)
